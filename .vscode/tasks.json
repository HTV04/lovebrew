{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Assets",
            "type": "shell",
            "command": "nimassets -d=${workspaceFolder}/source/assets -o=${workspaceFolder}/source/assets.nim"
        },

        {
            "label": "Compile",
            "type": "shell",
            "command": "nim c -o:${workspaceFolder}/lovebrew ${workspaceFolder}/source/main.nim",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}